<h1>Edit this  Appointment</h1>

<%= form_for @appointment do |f| %>
  <%= f.label :service %>
  <%= f.text_field :service %>
  <%= f.label :apt_time %>
  <%= f.text_field :apt_time %>
<h4>Employee:</h4>
    <%= f.label :employee_id %>
    <%= f.collection_select(:employee_id, Employee.all, :id, :name) %>
<h4>Client:</h4>
    <%= f.label :client_id %>
    <%= f.collection_select(:client_id, Client.all, :id, :name) %>
    <%= f.submit %>
<% end%>


